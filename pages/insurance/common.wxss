.layout {
    background: #f0f2f5;
    font-size: 14px;
    color: #737373;
    margin:10px;
}

.services_block {
    background: #fff;
}

.services_block h2 {
    font-size: 16px;
    padding: 0 10px;
    height: 40px;
    line-height: 40px;
    color: #404040
}

.services_block .h3 {
    font-size: 16px;
    padding: 0 10px;
    height: 40px;
    line-height: 40px;
    color: #404040;
    font-weight: bold;
}

.ser_txt {
    line-height: 24px;
    padding: 10px;
}

.ser_txt li {
    position: relative;
    padding-left: 24px;
}

.ser_txt2 li {
    padding-left: 0;
}

.ser_jiage table {
    border-left: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
}

.ser_jiage th {
    border-right: 1px solid #e5e5e5;
    border-top: 1px solid #e5e5e5;
    height: 32px;
    background: #e5e5e5
}

.ser_jiage td {
    border-right: 1px solid #e5e5e5;
    border-top: 1px solid #e5e5e5;
    height: 32px;
    text-align: center
}

.services_mg {
    padding: 0 10px;
    color: #404040;
}

.ser_txt tr {
    text-align: center;
}

.span_black {
    color: #404040;
}

.ser_txt text{
    display: block;

}

.flex_box{
    display: flex;
    text-align:center;
}

.flex_box text{
    
    flex:1;
    border:1px #404040 solid;
    margin:-1px -1px 0 0;

}